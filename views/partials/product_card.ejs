<div id="pid-<%=product.id%>" class="product-card" data-pid="<%=product.id%>">
    <div class="photo">
        <img src="<%=product.img%>" alt="">
    </div>
    <div class="name">
        <div class="product_name">
            <%=product.name%>
        </div>
        <div class="filling">
            <%=product.filling%>
        </div>
    </div>
    <div class="weights">
    <%
        let price_keys = Object.keys(price.price).sort()
        for(let i=0; i<price_keys.length;i++){ let pki = price_keys[i]%>
            <div
            class="weights_item"
            data-weight="<%=pki%>"
            data-price="<%=price["price"][`${pki}`]%>"><%=pki%> кг</div>
        <%}%>
    </div>
    <div class="button-add">
        <div class="btn_add_text cstyle">
            Выбрать
        </div>
        <div class="t-price ">Цена:</div>
        <div class="tp-price ">0</div>
    </div>
</div>